{% extends "PanelBundle:Security:layout.html.twig" %}

{% import ":macros:alert.html.twig" as alert %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <section class="card card_login">
        <header class="card-header text-xs-center bg-primary">
            <h2 class="card-title">Virtus</h2>
        </header>
        <div class="card-block">
            {% if error %}
                {{ alert.alert(error.messageKey|trans(error.messageData, 'security'), 'alert-danger', true) }}
            {% endif %}
            <form action="{{ path("panel_login_check") }}" method="post">
                <div class="form-group">
                    <label for="username">{{ 'security.login.username'|trans }}</label>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>
                <div class="form-group">
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input class="form-control" type="password" id="password" name="_password" required="required" />
                </div>
                <button class="btn btn-default btn-block btn-lg" type="submit" id="_submit" name="_submit">
                    <i class="fa fa-sign-in" aria-hidden="true"></i>
                    {{ 'security.login.submit'|trans }}
                </button>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            </form>
        </div>
    </section>
{% endblock %}
