{% extends "::theme.html.twig" %}

{% block content %}
    {% include "PanelBundle:include:breadcrumb.html.twig" %}
    {% block form_messages %}
        {% include "PanelBundle:include:messages.html.twig" %}
        {% if not form.vars.valid and form.vars.errors.count %}
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ form_errors(form) }}
            </div>
        {% endif %}
    {% endblock %}
    {{ form_start(form, form_start_variables is defined ? form_start_variables : {}) }}
    {% block form_toolbar %}{% endblock %}
    <section class="card">
        <header class="card-header">
            {% block form_head %}{% endblock %}
        </header>
    {% block form_content %}
        <div class="card-block">{% block form_fields %}{{ form_rest(form) }}{% endblock %}</div>
    {% endblock %}
    </section>
    {{ form_end(form) }}
{% endblock %}
